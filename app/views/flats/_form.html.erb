<div class="flat-form">

  <%= simple_form_for(@flat) do |f| %>

    <div class="form-control">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night, :input_html => { type: "number" } %>
      <%= f.input :number_of_guest, :input_html => { type: "number"} %>
      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to 'Back', flats_path, class: "btn btn-warining" %>
      </div>
    </div>


  <% end %>
</div>


