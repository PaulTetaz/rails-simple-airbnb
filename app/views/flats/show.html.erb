<div class="map" style="background-image: url(<%= flat.image %>)"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="flat-show-card">
      <h1><%= @flat.name %></h1>
      <p class="flat-show-address"><%= @flat.address %></p>
    </div>
    <div class="flat-show-card">
      <h2>Interested by the Property? Come here..</h2>
      <p><%= @flat.description %></p>
      <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=10 Clifton Gardens London W9 1DT&amp;zoom=13&amp;scale=2&amp;size=1000x1000&amp;maptype=roadmap&amp;markers=color:red%7C10 Clifton Gardens London W9 1DT&amp;key=AIzaSyBtaHK-BLhBg7TruJu8iKk_wETqZMJM-GY')"></div>
    </div>

    <div class="clo-4">
      <div class="flat-show-card">
        <h4>Book the place</h4>

        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="25/07/2019" aria-label="Username" aria-describebdy="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="07/08/2019" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="flat-show-card">
        <h2>Details</h2>
        <div class="d-flex align_items_start">
          <div class="d-flex">
            <i class="fas fa-users mr-1"></i><span><%= @flat.number_of_guests %></span>
          </div>
          <div class="d-flex ml-3">
            <i class="fas fa-ethereum mr-1"></i><span><%= @flat.price_per_night %></span>
          </div>
        </div>
      </div>

      <div class="flat-show-card">
        <div class="flex-align">
          <h4 class="no-mb">Share</h4>

          <div class="flex">
            <i class="fa fa-facebook-square fa-2x mr-2"></i>
            <i class="fa fa-twitter-square fa-2x mr-2"></i>
            <i class="fa fa-pinterest-square fa-2x mr-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

