<div class="container mt-3">
  <h1 class=mb-2">Availables Flats</h1>
  <p class="mp-1"><%= @search_msg %></p>
<d class="row d-flex justify-content-between p-3">
  <% @flats.each do |flat| %>
  <div class="col-3 card mx-2 overflow-auto d-flex flex-column justify-content-around mb-3 bg-light text-dark bg-grey" style="height: 400px;">"
    <div class="bg-light">
      <div class="">
        <img src="<%= flat.image %>" alt="pic" class="img-fluid" >
        <h3 class="my-3 bg-primary" style="font-size: 20px"><%= flat.name %></h3>
        <p><%= flat.address %></p>
      </div>
      <div class="d-flex justify-content-between my-2">
        <p><i class="fas fa-users"></i> <%= flat.number_of_guests %></p>
        <p><i class="fab fa-ethereum"></i> <%= flat.price_per_night %></p>
      </div>
    </div>
      <div class="d-flex justify-content-between align_items_center">
        <%= link_to "Information about the Property", flat_path(flat), class: "bg-info text-white" %>
        <%= link_to "Modify", edit_flat_path(flat), class: "bg-info text-white" %>
        <%= link_to "Delete", flat, class: "bg-danger text-white", method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
      </div>
    </div>
    <% end %>
    </d>
  </div>

